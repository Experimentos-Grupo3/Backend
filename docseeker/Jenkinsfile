pipeline {
    agent any

    tools {
        // Asegúrate de que Maven y JDK están configurados en la sección de herramientas globales de Jenkins
        maven 'MAVEN_3_6_3' // El nombre de la herramienta Maven configurada en Jenkins
        jdk 'JDK_17'
    }

    stages {
        stage('Checkout') {
            steps {
                // Obtener el código fuente del repositorio
                checkout scm
            }
        }

        stage('Unit Test') {
            steps {
                // Ejecutar las pruebas unitarias específicamente la prueba succesfullCreate
                sh 'mvn -Dtest=ReservationServiceImplTest#succesfullCreate test'
            }
            post {
                always {
                    // Guardar y publicar los resultados de las pruebas unitarias
                    junit '**/target/surefire-reports/*.xml'
                }
            }
        }

        // Puedes agregar más etapas como compilación, análisis de código, despliegue, etc.
    }

    post {
        // Acciones de limpieza y otros pasos finales
        always {
            cleanWs() // Limpia el workspace
        }
    }
}
